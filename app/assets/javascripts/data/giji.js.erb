//"日本語";

<%
namespace = "this.JST"
head = "app/jst/"
Dir.glob(head + "**/*.jst.*") do |path|
  idx = path.match(/#{head}([^.]+)/)[1]
  Tilt.new(path).render
%>

<%=namespace%> || (<%=namespace%> = {});
<%=namespace%>[<%=idx.inspect%>] = <%=Tilt.new(path).render.to_json%>;

<%
end

all_faces = Face.all.group_by(&:face_id)
faces = []

ChrSet.find(['changed','ririnra','sf','wa']).each do |set|
  npc = set.chr_npcs.sort_by(&:csid).first
  set.chr_jobs.each do |job|
    next unless all_faces[job.face_id]
    face = all_faces[job.face_id].first

    faces.push(
      caption: npc.caption,
      csid:    npc.csid,
      face_id: face.face_id,
      name:    face.name,
      order:   face.order,
    )
  end
end
%>
this.FACES = <%= faces.to_json %>
