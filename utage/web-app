APP=giji_rails
cd /www/$APP

case "$1" in
status)
  echo
  ls /utage/pids/*
  ;;
start)
  ~/.rbenv/bin/rbenv exec unicorn_rails -c /utage/$APP.unicorn.rb -E production -D
  ;;
stop)
  cat /utage/pids/$APP.unicorn.pid | xargs kill -KILL -s QUIT
  ;;
restart|reload)
  cat /utage/pids/$APP.unicorn.pid | xargs kill -KILL -s USR2
  ;;
*)
  echo
  echo $"Usage: $0 command"
  echo
  echo  "  command : status start stop restart reload "
  echo  "  product : $APP"
esac
