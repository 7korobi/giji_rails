source 'http://rubygems.org'

# ruby on rails
gem 'unicorn'
gem 'rails', '3.1.0.rc4'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'
# Asset template engines
gem 'sass'
gem 'coffee-script'
gem 'uglifier'
gem 'jquery-rails'

gem "decent_exposure"
gem "simple_form"
gem "haml"
gem "haml-rails"

# Use unicorn as the web server
# gem 'unicorn'

# web_service
gem "omniauth"
gem "mechanize"
gem "hpricot"

# data_base
gem "paperclip"
gem "mongoid"
gem "bson_ext" 
gem "json"
gem "sqlite3"

# management
gem "rubygems-update"

# Deploy with Capistrano
# gem 'capistrano'

group :development do
# To use debugger
  gem 'ruby-debug19'
  gem "factory_girl_rails", :require => nil 
  gem 'rspec-rails', '>= 2.6.1'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
  gem 'rspec-rails', '>= 2.6.1'
end
